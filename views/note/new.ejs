                    <textarea class="form-control" id="dailyReflection" name="note[dailyReflection]"
                        placeholder="Start typing..." style="text-align: left;"></textarea>
                </div>
                <div class="form-group">
                    <label for="dailyReflection">
                        <i class="fas fa-meh"></i>
                        What didn't go as planned?!
                    </label>
                    <textarea class="form-control" id="dailyReflection" name="note[dailyReflection]"
                        placeholder="Start typing..." style="text-align: left;"></textarea>
                </div>
                <div class="form-group">
                    <label for="dailyReflection">
                        <i class="fas fa-meh-rolling-eyes"></i>
                        What can be improved upon?!
                    </label>
                    <textarea class="form-control" id="dailyReflection" name="note[dailyReflection]"
                        placeholder="Start typing..." style="text-align: left;"></textarea>
                </div>
                <div class="form-group">
                    <label for="dailyReflection">
                        <i class="fas fa-graduation-cap"></i>
                        What's on your mind?!</label>
                    <textarea class="form-control" id="dailyReflection" name="note[dailyReflection]"
                        placeholder="Start typing..." style="text-align: left;"></textarea>
                </div>
                <!-- SUBMIT BUTTON -->
                <div class="form-group button-container">
                    <button type="submit" class="button save">Save</button>
                </div>
            </form>
        </div>
        <!-- // DAILY REFLECTION -->


