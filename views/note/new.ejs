    <!-- NOTES CONTAINER -->
    <div class="container">

        <!-- BLANK NOTES -->
        <div class="col-md-offset-2 col-md-9 blank-section">
            <form action="/<%= user._id %>/notes" method="POST">
                <!-- NOTE TYPE -->
                <input type="text" name="note[type]" value="blank" style="display: none;">
                <!-- NOTE TITLE -->
                <div class="form-group">
                    <label for="title" class="sr-only"></label>
                    <input class="form-control" id="title" type="text" name="note[title]" value="Notes" placeholder="Notes Title" maxlength="50">
                </div>
                <!-- NOTE DESCRIPTION -->
                <textarea class="js--trumbowyg" name="note[description]" value="Notes" placeholder="Start typing here..." style="text-align: left;">
                    &lt;placeholder&gt;Start typing here...&lt;/placeholder&gt;
                    &lt;br /&gt;
                </textarea>
                <!-- SUBMIT BUTTON -->
                <div class="form-group button-container">
                    <button type="submit" class="button save">Save</button>
                </div>
            </form>
        </div>
        <!-- // BLANK NOTES -->


        <!-- TODO LIST -->
        <div class="col-md-offset-2 col-md-9 to-do-section" style="display: none;">
            <form action="/<%= user._id %>/notes" method="POST">
                <div class="to-do-container">
                    <h1>TO-DO LIST<i class="fa fa-plus"></i></h1>
                    <!-- NOTE TYPE -->
                    <input type="text" name="note[type]" value="to-do" style="display: none;">
                    <!-- NOTE TITLE -->
                    <div class="form-group" style="display: none;">
                        <label for="title" class="sr-only"></label>
                        <input class="form-control" id="title" type="text" name="note[title]" value="TO-DO LIST">
                    </div>
                    <!-- TO-DO INPUTS -->
                    <div class="form-group">
                        <input type="text" class="form-control to-do-input" placeholder="ADD TO-DO ITEMS...">
                        <ul class="to-do-ul">
                            <!-- <li class="to-do-li">
                                <input class="form-control to-do-input" type="text" name="note[todos]" placeholder="ADD TO-DO ITEMS...">
                            </li> -->
                        </ul>
                    </div>
                </div>
                <!-- SUBMIT BUTTON -->
                <div class="form-group button-container">
                    <button type="submit" class="button save">Save</button>
                </div>
            </form>
        </div>
        <!-- // TODO LIST -->


        <!-- LECTURE NOTES -->
        <div class="col-md-offset-2 col-md-9 lecture-section" style="display: none;">
            <form action="/<%= user._id %>/notes" method="POST">
                <!-- NOTE TYPE -->
                <input type="text" name="note[type]" value="lecture" style="display: none;">
                <!-- NOTE TITLE -->
                <div class="form-group">
                    <label for="title" class="sr-only"></label>
                    <input class="form-control" id="title" type="text" name="note[title]" value="Lecture Notes" placeholder="Lecture Notes" maxlength="50">
                </div>
                <!-- NOTE DESCRIPTION -->
                <textarea class="js--trumbowyg" name="note[description]">
                    &lt;strong&gt;Course: &lt;/strong&gt;
                    &lt;br /&gt;
                    &lt;strong&gt;Professor: &lt;/strong&gt;
                    &lt;br /&gt;
                </textarea>
                <!-- SUBMIT BUTTON -->
                <div class="form-group button-container">
                    <button type="submit" class="button save">Save</button>
                </div>
            </form>
        </div>
        <!-- // LECTURE NOTES -->


        <!-- MEETING NOTE -->
        <div class="col-md-offset-2 col-md-9 meeting-section" style="display: none;">
            <form action="/<%= user._id %>/notes" method="POST">
                <!-- NOTE TYPE -->
                <input type="text" name="note[type]" value="meeting" style="display: none;">
                <!-- NOTE TITLE -->
                <div class="form-group title-container">
                    <label for="title" class="sr-only"></label>
                    <input class="form-control" id="title" type="text" name="note[title]" value="Meeting Title" placeholder="Meeting Title" maxlength="80">
                </div>
                <!-- MEETING DATE -->
                <div class="form-group">
                    <label for="meetingDate">Date: </label>
                    <input class="form-control" id="meetingDate" type="date" name="note[meetingDate]" placeholder="Meeting Date">
                </div>
                <!-- MEETING AGENDA -->
                <div class="form-group">
                    <label for="meetingAgenda">Agenda:</label>
                    <textarea class="form-control" id="meetingAgenda" name="note[meetingAgenda]" placeholder="What's the meeting agenda?!"></textarea>
                </div>
                <!-- MEETING ATTENDEES -->
                <div class="form-group">
                    <label for="meetingAttendees">Attendees:</label>
                    <textarea class="form-control" id="meetingAttendees" name="note[meetingAttendees]"
                        placeholder="Attendees at the meeting..."></textarea>
                </div>

                <!-- MEETING DETAILS -->
                <table id="tblData">
                    <thead>
                        <tr>
                            <th>
                                <div><a id="btnAdd"><i class="fa fa-plus"></i></a></div>
                                Action Item
                            </th>
                            <th>Assignee</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <span class="btnDelete"><i class="fa fa-trash"></i></span>
                                <input type='text' name='note[meetingAction]' />
                            </td>
                            <td><input type='text' name='note[meetingAssignee]' /></td>
                            <td><input type='text' name='note[meetingStatus]' /></td>
                        </tr>
                    </tbody>
                </table>

                <!-- SUBMIT BUTTON -->
                <div class="form-group button-container">
                    <button type="submit" class="button save">Save</button>
                </div>
            </form>
        </div>
