<% include partials/header %>

<!-- RESET PASSWORD FORM -->
<div class="reset">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">

            <form action="/reset/<%= token %>" method="POST">
                <h2>Reset Password</h2>

                <!-- NEW PASSWORD -->
                <div class="form-group input-group">
                    <!-- <span class="input-group-addon"><i class="fa fa-lock"></i></span> -->
                    <label for="password">Password:</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="New password" maxlength="30" autofocus="autofocus" required>
                </div>

                <!-- CONFIRM PASSWORD -->
                <div class="form-group input-group">
                    <!-- <span class="input-group-addon"><i class="fa fa-lock"></i></span> -->
                    <label for="confirm">Confirm Password:</label>
                    <input type="password" class="form-control" id="confirm" name="confirm" placeholder="Confirm password" maxlength="30" required>
                </div>

                <!-- SUBMIT BUTTON -->
                <div class="form-group button-container">
                    <button type="submit" class="button update">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- // RESET PASSWORD FORM -->
    
<% include partials/footer %>