<% include partials/header.ejs %>

<div class="notes-container">
    <div id="body-row">
        <div id="sidebar-container" class="sidebar-collapsed d-none d-md-block">
            <ul class="list-group">
                <a href="#" id="collapse-container" data-toggle="sidebar-colapse" class="bg-dark list-group-item list-group-item-action d-flex align-items-center">
                    <div class="d-flex w-100 justify-content-start align-items-center">
                        <span id="collapse-icon" class="fa fa-2x mr-3"></span>
                        <span id="collapse-text" class="menu-collapsed">Collapse</span>
                    </div>
                </a>
                <a href="#submenu1" data-toggle="collapse" aria-expanded="false" class="bg-dark list-group-item list-group-item-action flex-column align-items-start">
                    <div class="d-flex w-100 justify-content-start align-items-center">
                        <span class="fa fa-clipboard fa-fw mr-3"></span> 
                        <span class="menu-collapsed new-note-dropdown show-text">New Note</span>
                        <span class="submenu-icon ml-auto"></span>
                    </div>
                </a>
                <div id='submenu1' class="collapse sidebar-submenu">
                    <a href="#" class="list-group-item list-group-item-action bg-dark text-white">
                        <span class="menu-collapsed">
                            <div class="note blank">
                                <div>
                                    <!-- BLANK NOTE -->
                                    <i class="fa fa-sticky-note"></i>
                                </div>
                            </div>
                        </span>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action bg-dark text-white">
                        <span class="menu-collapsed">
                            <div class="note to-do">
                                <div>
                                    <!-- TO-DO LIST -->
                                    <i class="fa fa-clipboard-list"></i>
                                </div>
                            </div>
                        </span>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action bg-dark text-white">
                        <span class="menu-collapsed">
                            <div class="note lecture">
                                <div>
                                    <!-- LECTURE NOTES -->
                                    <i class="fa fa-file-word"></i>
                                </div>
                            </div>
                        </span>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action bg-dark text-white">
                        <span class="menu-collapsed">
                            <div class="note meeting">
                                <div>
                                    <!-- MEETING NOTES -->
                                    <i class="fa fa-handshake"></i>
                                </div>
                            </div>
                        </span>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action bg-dark text-white">
                        <span class="menu-collapsed">
                            <div class="note planner">
                                <div>
                                    <!-- SCHEDULE PLANNER -->
                                    <i class="fa fa-calendar-alt"></i>
                                </div>
                            </div>
                        </span>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action bg-dark text-white">
                        <span class="menu-collapsed">
                            <div class="note daily-reflection">
                                <div>
                                    <!-- DAILY REFLECTION -->
                                    <i class="fas fa-cloud-sun"></i>
                                </div>
                            </div>
                        </span>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action bg-dark text-white">
                        <span class="menu-collapsed">
                            <div class="note meal-planner">
                                <div>
                                    <!-- MEAL PLANNER -->
                                    <i class="fas fa-utensils"></i>
                                </div>
                            </div>
                        </span>
                    </a>
                </div>
            </ul>
        </div>
    </div>

    <div class="container">

        <!-- BLANK NOTES -->
        <div class="col-md-offset-2 col-md-9 blank-section" style="display: none;">
            <form action="/<%= user._id %>/notes" method="POST">
                <!-- <h1 >NOTES...</h1> -->
                <input type="text" name="note[type]" value="blank" style="display: none;">
                <div class="form-group">
                    <label for="title" class="sr-only"></label>
                    <input class="form-control" id="title" type="text" name="note[title]" placeholder="Notes Title" maxlength="50">
                </div> 
                <textarea class="js--trumbowyg" name="note[description]" placeholder="Start typing here..." style="text-align: left;">
                    &lt;placeholder&gt;Start typing here...&lt;/placeholder&gt;
                </textarea>
                <div class="form-group">
                    <button class="btn" type="submit">Save</button>
                </div> 
            </form>           
        </div>

        <!-- TODO LIST -->
        <div class="col-md-offset-2 col-md-9 to-do-section" style="display: none;">
            <form action="/<%= user._id %>/notes" method="POST">
                <div class="to-do-container">
                    <h1 >TO DO LIST<i class="fa fa-plus"></i></h1>
                    <input type="text" name="note[type]" value="to-do" style="display: none;">
                    <div class="form-group">
                        <!-- <input class="form-control to-do-input" type="text" name="note[title]" placeholder="ADD TO-DO ITEMS..."> -->
                        <ul class="to-do-ul">
                            <li class="to-do-li">
                                <!-- <span class="to-do-span" style="float: left;"><i class="fa fa-trash"></i></span> -->
                                <input class="form-control to-do-input" type="text" name="note[todos]" placeholder="ADD TO-DO ITEMS...">
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="form-group">
                    <button class="btn">Save!</button>
                </div>
            </form>
        </div>

        <!-- LECTURE NOTES -->
        <div class="col-md-offset-2 col-md-9 lecture-section" style="display: none;" >
            <form action="/<%= user._id %>/notes" method="POST">
                
                <!-- <h1>LECTURE NOTES</h1> -->
                <input type="text" name="note[type]" value="lecture" style="display: none;">
                <div class="form-group">
                    <label for="title" class="sr-only"></label>
                    <input class="form-control" id="title" type="text" name="note[title]" placeholder="Lecture Title" maxlength="50">
                </div> 
                <textarea class="js--trumbowyg" name="note[description]">
                    &lt;strong&gt;Course:&lt;/strong&gt;
                    &lt;br /&gt;
                    &lt;strong&gt;Professor:&lt;/strong&gt;
                </textarea>
                <div class="row">
                    <button class="btn" type="submit">Save</button>
                </div> 
            </form>               
        </div>

        <!-- MEETING NOTE -->
        <div class="col-md-offset-2 col-md-9 meeting-section" style="display: none;">

            <form action="/<%= user._id %>/notes" method="POST" >

                <input type="text" name="note[type]" value="meeting"  style="display: none;" >                
                <div class="form-group title-container">
                    <label for="title" class="sr-only"></label>
                    <input class="form-control" id="title" type="text" name="note[title]" placeholder="Meeting Title" maxlength="80">
                </div>           
                <div class="form-group">
                    <label for="meetingDate">Date & Time: </label>
                    <input class="form-control" id="meetingDate" type="text" name="note[meetingDate]" placeholder="Date and Time of the meeting">
                </div>
                <div class="form-group">                
                    <label for="meetingAgenda">Agenda:</label>
                    <textarea class="form-control" id="meetingAgenda" name="note[meetingAgenda]" placeholder="What's the meeting agenda?!"></textarea>
                </div>
                <div class="form-group">
                    <label for="meetingAttendees">Attendees:</label>
                    <textarea class="form-control" id="meetingAttendees" name="note[meetingAttendees]" placeholder="Attendees at the meeting..."></textarea>
                </div>

                <table id="tblData">          
                    <thead>
                        <tr>
                            <th>
                                <div>
                                    <a id="btnAdd"><i class="fa fa-plus"></i></a>
                                </div>
                                Action Item
                            </th>
                            <th>Assignee</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <span class="btnDelete"><i class="fa fa-trash"></i></span>
                                <input type='text' name='note[meetingAction]' />
                            </td>
                            <td><input type='text' name='note[meetingAssignee]' /></td>
                            <td><input type='text' name='note[meetingStatus]' /></td>
                        </tr>
                    </tbody>
                </table>

                <div class="row">
                    <button class="btn" type="submit">Save</button>
                </div> 
            </form>
        </div>

        <!-- SCHEDULE PLANNER -->
        <div class="col-md-offset-2 col-md-9 planner-section">
            <h1>SCHEDULE PLANNER</h1>
            <div mbsc-page class="demo-add-delete-event">
                <form action="/<%= user._id %>/notes" method="POST" class="planner-form">
                    <input type="text" name="note[type]" value="planner" style="display: none;" >
                    
                    <div class="mbsc-grid md-add-event-demo">
                        <div class="mbsc-row mbsc-no-padding">
                            <div class="mbsc-col-md-4 mbsc-col-12">
                                <div id="demo-add-event-month"></div>
                                <div class="mbsc-btn-group-block">
                                    <a id="showAddEventPopup">Add New Event</a>
                                </div>
                            </div>
                            <div class="mbsc-col-md-8 mbsc-col-12 md-col-right">
                                <div id="demo-add-event-day"></div>
                                <button mbsc-button type="submit">Submit</button>
                            </div>
                        </div>
                    </div>
                    <div id="demo-add-event-popup" class="md-add-event-popup">
                        <div>
                            <div class="form-group title-container">
                                <label for="title" class="sr-only"></label>
                                <input class="form-control" id="title" type="text" name="note[eventTitle]" placeholder="Event Title" maxlength="80">
                            </div>
                            <div class="form-group">
                                <label for="description" class="sr-only"></label>
                                <input class="form-control" id="description" type="text" name="note[eventDescription]" placeholder="Event Description">
                            </div> 
                        </div>
                        <div class="mbsc-form-group">
                            <div class="form-group">
                                <label for="eventDate">
                                    Starts
                                    <input mbsc-input id="eventDate" name="note[eventStart]">
                                </label>
                                <label>
                                    Ends
                                    <input mbsc-input id="endInput" name="note[eventEnd]">
                                </label>
                            </div>
                            <div class="form-group">
                                <label>
                                    Show as busy
                                    <input mbsc-segmented type="radio" name="note[eventAvailability]" value="false" checked>
                                </label>
                                <label>
                                    Show as free
                                    <input mbsc-segmented type="radio" name="note[eventAvailability]" value="true">
                                </label>
                            </div>
                        </div>
                    </div>
                </form>    
            </div>        
        </div>

        <!-- DAILY REFLECTION -->
        <div class="col-md-offset-2 col-md-9 daily-reflection-section" style="display: none;">
            <form action="/<%= user._id %>/notes" method="POST">
                <h1 >DAILY REFLECTION...</h1>
                <input type="text" name="note[type]" value="daily-reflection" style="display: none;">
                <div class="form-group title-container">
                    <label id="dateLabel" for="date">Date:</label>
                    <input class="form-control" id="date" type="date" name="note[date]" maxlength="80">
                </div> 
                <div class="form-group">
                    <label for="dailyReflection">
                        <i class="fas fa-grin-beam"></i>
                        What went well today?!
                    </label>
                    <textarea class="form-control" id="dailyReflection" name="note[dailyReflection]" placeholder="Start typing..." style="text-align: left;"></textarea>
                </div>
                <div class="form-group">
                    <label for="dailyReflection">
                        <i class="fas fa-meh"></i>
                        What didn't go as planned?!
                    </label>
                    <textarea class="form-control" id="dailyReflection" name="note[dailyReflection]" placeholder="Start typing..." style="text-align: left;"></textarea>
                </div>
                <div class="form-group">
                    <label for="dailyReflection">
                        <i class="fas fa-meh-rolling-eyes"></i>
                        What can be improved upon?!
                    </label>
                    <textarea class="form-control" id="dailyReflection" name="note[dailyReflection]" placeholder="Start typing..." style="text-align: left;"></textarea>
                </div>
                <div class="form-group">
                    <label for="dailyReflection">
                        <i class="fas fa-graduation-cap"></i>
                        What's on your mind?!</label>
                    <textarea class="form-control" id="dailyReflection" name="note[dailyReflection]" placeholder="Start typing..." style="text-align: left;"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn" type="submit">Save</button>
                </div> 
            </form>           
        </div>

        <!-- MEAL PLANNER -->
        <div class="col-md-offset-2 col-md-9 meal-planner-section" style="display: none;">
            <form action="/<%= user._id %>/notes" method="POST">
                <h1 >MEAL PLANNER...</h1>
                <input type="text" name="note[type]" value="meal-planner"  style="display: none;" >
                <div class="form-group title-container">
                    <label id="dateLabel" for="date">Week Start Date:</label>
                    <input class="form-control" id="date" type="date" name="note[date]" maxlength="80">
                </div>           
                <table id="tblData">          
                    <thead>
                        <tr>
                            <th></th>
                            <th>Breakfast</th>
                            <th>Lunch</th>
                            <th>Dinner</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="day">Sunday</td>
                            <td><input type='text' name='note[meal1]' /></td>
                            <td><input type='text' name='note[meal2]' /></td>
                            <td><input type='text' name='note[meal3]' /></td>
                        </tr>
                        <tr>
                            <td class="day">Monday</td>
                            <td><input type='text' name='note[meal1]' /></td>
                            <td><input type='text' name='note[meal2]' /></td>
                            <td><input type='text' name='note[meal3]' /></td>
                        </tr>
                        <tr>
                            <td class="day">Tuesday</td>
                            <td><input type='text' name='note[meal1]' /></td>
                            <td><input type='text' name='note[meal2]' /></td>
                            <td><input type='text' name='note[meal3]' /></td>
                        </tr>
                        <tr>
                            <td class="day">Wednesday</td>
                            <td><input type='text' name='note[meal1]' /></td>
                            <td><input type='text' name='note[meal2]' /></td>
                            <td><input type='text' name='note[meal3]' /></td>
                        </tr>
                        <tr>
                            <td class="day">Thursday</td>
                            <td><input type='text' name='note[meal1]' /></td>
                            <td><input type='text' name='note[meal2]' /></td>
                            <td><input type='text' name='note[meal3]' /></td>
                        </tr>
                        <tr>
                            <td class="day">Friday</td>
                            <td><input type='text' name='note[meal1]' /></td>
                            <td><input type='text' name='note[meal2]' /></td>
                            <td><input type='text' name='note[meal3]' /></td>
                        </tr>

                        <tr>
                            <td class="day">Saturday</td>
                            <td><input type='text' name='note[meal1]' /></td>
                            <td><input type='text' name='note[meal2]' /></td>
                            <td><input type='text' name='note[meal3]' /></td>
                        </tr>
                    </tbody>
                </table>
                <div class="form-group">
                    <button class="btn" type="submit">Save</button>
                </div> 
            </form>
        </div>

    </div>
</div>

<% include partials/footer.ejs %>
