<div class="notes-container">
    <div class="container">
        <div class="row">
            <div class="col-md-4 new-note">
                <div class="note blank">
                    <div>
                        <i class="fa fa-sticky-note"></i>
                    </div>
                </div>
                <div class="note meeting">
                    <div>
                        <i class="fa fa-handshake"></i>
                    </div>
                </div>
                <div class="note to-do">
                    <div>
                        <i class="fa fa-clipboard-list"></i>
                    </div>
                </div>
                <div class="note weekly-planner">
                    <div>
                        <i class="fa fa-calendar-alt"></i>
                    </div>
                </div>
                <div class="note project-plan">
                    <div>
                        <i class="far fa-file-word"></i>
                    </div>
                </div>
                <div class="note lecture">
                    <div>
                        <i class="fa fa-id-card"></i>
                    </div>
                </div>
            </div>

            <!-- BLANK NOTES -->
            <div class="col-md-8 blank-section" style="display: none;">
                <form action="/<%= user._id %>/notes" method="POST">
                    <h1 >NOTES...</h1>
                    <textarea class="js--trumbowyg" name="note[description]" placeholder="Start typing here..." style="text-align: left;">
                        &lt;placeholder&gt;Start typing here...&lt;/placeholder&gt;
                        
                    </textarea>
                    <div class="row">
                        <button class="btn" type="submit">Save</button>
                    </div> 
                </form>           
            </div>

            <!-- TODO LIST -->
            <div class="col-md-8 to-do-section" style="display: none;">
                <form action="/<%= user._id %>/notes" method="POST">
                    <div>
                        <div class="to-do-container">
                            <h1 >TO DO LIST<i class="fa fa-plus"></i></h1>
                            <div class="form-group">
                                <input class="form-control to-do-input" type="text" name="note[title]" placeholder="Add Do List" autofocus>
                            </div>
                            <ul class="to-do-ul">
                                <!-- <li class="to-do-li"><span class="to-do-span"><i class="fa fa-trash"></i></span> GO TO HELL</li> -->
                            </ul>
                        </div>
                        <div class="form-group">
                            <button class="btn">Save!</button>
                        </div>
                    </div>
                </form>
            </div>

            <!-- LECTURE NOTES -->
            <div class="col-md-8 lecture-section"  >
                <form action="/<%= user._id %>/notes" method="POST">
                    <!-- <trix-editor input="x"></trix-editor> -->
                    <!-- <input id="x" value="Editor <span style='text-decoration: underline;'>content</span> goes here" type="hidden" name="note[description]" > -->
                    <!-- <input id="x" type="hidden" name="note[description]" /> -->
                    <h1 >LECTURE NOTES</i></h1>
                    <textarea class="js--trumbowyg" name="note[description]">
                        &lt;h2&gt;Title:&lt;/h2&gt;
                        &lt;strong&gt;Course:&lt;/strong&gt;
                        &lt;strong&gt;Professor:&lt;/strong&gt;
                    </textarea>
                    <div class="row">
                        <button class="btn" type="submit">Save</button>
                    </div> 
                </form>               
            </div>

        </div>
    </div>
</div>

