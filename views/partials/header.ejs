<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Notes App</title>

    <!-- LINKING THE REQD. STYLESHEETS -->
    <link rel="stylesheet" href="/stylesheets/header.css">
    <link rel="stylesheet" href="/stylesheets/footer.css">
    <link rel="stylesheet" href="/stylesheets/landing.css">
    <link rel="stylesheet" href="/stylesheets/homepage.css">
    <link rel="stylesheet" href="/stylesheets/profile.css">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <!-- <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.2/css/fontawesome.css"> -->
    <!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.2/css/fontawesome.min.css"> -->
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/css?family=Arvo&display=swap" rel="stylesheet">

</head>
<body>

    <!-- NAVBAR -->
    <nav role="navigation" class="navbar navbar-custom navbar-fixed-top">
        <div class="container-fluid">

            <!-- LOGO -->
            <div class="navbar-header">
                <a href="#" class="navbar-brand">QuickNotes</a>
                <button type="button" class="navbar-toggle" data-target="#navbarCollapse" data-toggle="collapse">
                    <span class="sr-only">Toggle Navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>

            <!-- LINKS -->
            <div class="navbar-collapse collapse" id="navbarCollapse" >

                <!-- LEFT LINKS -->
                <ul class="nav navbar-nav">
                    <li><a href="#">Home</a></li>
                    <li><a href="#">Help</a></li>
                    <li><a href="#">Contact</a></li>
                </ul>

                <!-- RIGHT LINKS -->
                <ul class="nav navbar-nav navbar-right">
                    <% if( !currentUser){ %>
                        <li><a href="#signupModal" data-toggle="modal">Sign-Up</a></li>
                        <li><a href="#loginModal" data-toggle="modal">Login</a></li>
                    <% } else{ %>
                        <li><a href="#logoutModal" data-toggle="modal">Logout</a></li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <!-- FLASH MESSAGES -->
    <div class="container">

        <% if(error && error.length > 0){ %>
            <div class="alert alert-danger errorMsg" role="alert">
                <%= error %>
            </div>
        <% } %>
        
        <% if(success && success.length > 0){ %>
            <div class="alert alert-success successMsg" role="alert">
                <%= success %>
            </div>
        <% } %>

    </div>
    
    <!-- LOGIN FORM -->
    <form action="/" method="POST" id="loginForm" class="loginForm">
        <div class="modal" id="loginModal" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">

                    <!-- Header -->
                    <div class="modal-header">
                        <!-- Close button -->
                        <button class="close" data-dismiss="modal">&times;</button>
                        <h4 id="myModalLabel"> Login: </h4>
                    </div>

                    <!-- Body -->
                    <div class="modal-body">

                        <!-- Username -->
                        <div class="form-group">
                            <label for="username" class="sr-only">Username</label>
                            <input type="text" class="form-control" id="username" name="username" placeholder="Username" maxlength="30">
                        </div>

                        <!-- Password -->
                        <div class="form-group">
                            <label for="password" class="sr-only">Password</label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Password" maxlength="30">
                        </div>

                    </div>

                    <div class="checkbox">
                        <!-- Remember Me -->
                        <label>
                            <input type="checkbox" name="rememberMe" id="rememberMe">
                            Remember Me
                        </label> 
                        
                        <!-- Forgot Password -->
                        <a class="pull-right" style="cursor: pointer" data-dismiss="modal" data-target="#forgotPasswordModal" data-toggle="modal">
                            Forgot Password
                        </a>
                    </div>
                    
                    <!-- Footer -->
                    <div class="modal-footer">
                        <button type="submit" class="btn green loginButton" name="form" value="login">Login</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    </div>

                </div>
            </div>
        </div>
    </form>

    <!-- LOGOUT -->
    <form action="/" method="POST" id="logoutForm" class="logoutForm">
        <div class="modal" id="logoutModal" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">

                    <!-- Header -->
                    <div class="modal-header">
                        <!-- Close button -->
                        <button class="close" data-dismiss="modal">&times;</button>
                        <h4 id="myModalLabel"> Sure? </h4>
                    </div>

                    <!-- Footer -->
                    <div class="modal-footer">
                        <button type="submit" class="btn red logoutButton" name="form" value="logout">Logout</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    </div>

                </div>
            </div>
        </div>
    </form>

    <!-- FORGIT PASSWORD FORM -->
    <form method="POST" id="forgotPasswordForm">
        <div class="modal" id="forgotPasswordModal" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">

                    <!-- Header -->
                    <div class="modal-header">
                        <!-- Close button -->
                        <button class="close" data-dismiss="modal">&times;</button>
                        <h4 id="myModalLabel"> Forgot Password? </h4>
                    </div>

                    <!-- Body -->
                    <div class="modal-body">

                        <!-- Email Address -->
                        <h6 id="myModalLabel"> Enter Email address:  </h6>
                        <div class="form-group">
                            <label for="email" class="sr-only">Email</label>
                            <input type="email" class="form-control" id="email" name="email" autofocus placeholder="Email Address" maxlength="50">
                        </div>
                    </div>
                    
                    <!-- Footer -->
                    <div class="modal-footer">
                        <button type="submit" class="btn green" name="form" value="forgotPassword">Reset</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    </div>

                </div>
            </div>
        </div>
    </form>

    
            